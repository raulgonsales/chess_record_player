<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.controllers.MainController">
    <TabPane fx:id="tabs" tabClosingPolicy="ALL_TABS">
        <Tab fx:id="firstTab" text="Chess"/>
        <Tab fx:id="addNewTab" onSelectionChanged="#addNewTab" text="+" closable="false"/>
        <stylesheets>
            <URL value="@../style/tabs.css" />
        </stylesheets>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
    </TabPane>
</AnchorPane>
